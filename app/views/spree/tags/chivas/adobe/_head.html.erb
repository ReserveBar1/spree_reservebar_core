<% if controller.controller_name == "taxons" && controller.action_name == "show" %>
  <% if @taxon.children.empty? && @taxon.name == 'Chivas' %>
    <%= render partial: 'spree/tags/chivas/adobe/header_script' %>
  <% end %>
<% elsif controller.controller_name == "products" && controller.action_name == "show" %>
  <% if @product.taxons.map(&:name).include? 'Chivas' %>
    <%= render partial: 'spree/tags/chivas/adobe/header_script' %>
  <% end %>
<% elsif controller.controller_name == "orders" && controller.action_name == "edit" %>
  <%
    product_owners = Array.new
    @order.line_items.map {|i| product_owners << i.product.taxons.map(&:name)}
  %>
  <% if product_owners.flatten.uniq.include? 'Chivas' %>
    <%= render partial: 'spree/tags/chivas/adobe/header_script' %>
  <% end %>
<% elsif controller.controller_name == "orders" && controller.action_name == "show" %>
  <% if flash[:commerce_tracking] %>
    <% 
      product_names =[]
      @order.line_items.each do |li|
        if li.product.taxons.map(&:name).include? 'Chivas'
          product_names << li.product.name.gsub(' ','+').gsub("'","")
        end
      end
      product_names = product_names.join('|')
    %>
    <% unless product_names.empty? %>
      <%= render partial: 'spree/tags/chivas/adobe/header_script' %>
    <% end %>
  <% end %>
<% end %>
