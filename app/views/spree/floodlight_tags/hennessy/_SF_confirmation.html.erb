<% if controller.controller_name == "orders" && controller.action_name == "show" %>
  <% if flash[:commerce_tracking] %>
    <% 
    quantities = []
    product_names =[]
    @order.line_items.each do |li|
      prod_name = li.product.name.downcase
      if prod_name.include?('v.s deluxe edition by shepard fairey') || prod_name.include?('v.s limited edition by shepard fairey')
        quantities << li.quantity
        product_names << li.product.name.gsub(' ','+').gsub("'","")
      end
    end
    quantities = quantities.sum
    product_names = product_names.join('|')
    %>
    <% unless product_names.empty? %>
      <%= "<!--
      Start of DoubleClick Floodlight Tag: Please do not remove
      Activity name of this tag: ECM_ReserveBarSale_2014-06-18_Step 4
      URL of the webpage where the tag is expected to be placed: http://www.reservebar.com/success
      This tag must be placed between the <body> and </body> tags, as close as possible to the opening tag.
      Creation Date: 06/18/2014
      -->".html_safe %>
      <iframe src="https://3988497.fls.doubleclick.net/activityi;src=3988497;type=ecm_2014;cat=ecm_r851;qty=1;cost=<%= @order.total.to_f.to_s %>;u7='';u3=<%= product_names %>;u4=<%= @order.number %>;u5='';u6='';u1=<%= quantities %>;u2=<%= @order.total.to_f.to_s %>;ord=<%= @order.number %>?" width="1" height="1" frameborder="0" style="display:none"></iframe>

      <%= "<!-- End of DoubleClick Floodlight Tag: Please do not remove -->".html_safe %>
    <% end %>
  <% end %>
<% end %>
