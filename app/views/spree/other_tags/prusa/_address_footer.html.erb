<% if controller.controller_name == "checkout" && controller.action_name == "edit" %>
  <% if @order.state == 'address' %>
    <%
      product_owners = Array.new
      @order.line_items.map { |i| product_owners << i.product.taxons.map(&:name) }
      prusa_brands = ['The Glenlivet']
    %>
    <% if (prusa_brands && product_owners.flatten.uniq).present? %>
      <%= render partial: 'spree/other_tags/prusa/footer_tag' %>
    <% end %>
  <% end %>
<% end %>
