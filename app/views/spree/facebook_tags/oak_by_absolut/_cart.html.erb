<% if controller.controller_name == "orders" && controller.action_name == "edit" %>
  <% if @order.line_items.map(&:product).map(&:permalink).uniq.include? 'oak-by-absolut' %>
    <%
      price = 0
      @order.line_items.each do |li|
        if li.product.permalink.include? 'oak-by-absolut'
          price = li.price * li.quantity
        end
      end
    %>
    <%= "<!-- Facebook Conversion Code for Absolut Oak_Reserve Bar_Shopping Cart Conversion Pixel (add to cart) -->".html_safe %>
    <script>(function() {
      var _fbq = window._fbq || (window._fbq = []);
      if (!_fbq.loaded) {
        var fbds = document.createElement('script');
        fbds.async = true;
        fbds.src = '//connect.facebook.net/en_US/fbds.js';
        var s = document.getElementsByTagName('script')[0];
        s.parentNode.insertBefore(fbds, s);
        _fbq.loaded = true;
      }
    })();
    window._fbq = window._fbq || [];
    window._fbq.push(['track', '6030670452561', {'value':'<%= number_to_currency(price) %>','currency':'USD'}]);
    </script>
    <noscript><img height="1" width="1" alt="" style="display:none" src="https://www.facebook.com/tr?ev=6030670452561&amp;cd[value]=0.00&amp;cd[currency]=USD&amp;noscript=1" /></noscript>
  <% end %>
<% end %>
