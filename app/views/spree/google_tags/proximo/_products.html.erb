<% if controller.controller_name == "products" && controller.action_name == "show" %>
  <% brand = @product.brand %>
  <% if brand.try(:brand_owner).try(:title) == 'Proximo' %>
    <script>
      dataLayer = [{
        'BrandFamily': '<%= brand.title %>',
        'Product': '<%= @product.name %>'
      }];
    </script>
    <%= render 'spree/google_tags/proximo/google_tag' %>
  <% end %>
<% end %>
