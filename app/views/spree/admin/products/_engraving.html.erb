<br/><br />
<%= f.label :engravable %><br />
<%= f.check_box :engravable %><br/>

<div id='engraving-properties' style="<%= 'display: none;' unless @product.engravable? %>">
  <%= f.label :engraving_image_url %><br />
  <%= f.text_field :engraving_image_url %><br />

  <%= f.label :engraving_color, "Engraving color (eg. #fbb917 or rgb(229, 188, 100) )" %><br />
  <%= f.text_field :engraving_color %><br />

  <%= f.label :engraving_char_limit, "Engraving Character Limit (eg. 15)" %><br />
  <%= f.text_field :engraving_char_limit %><br />

  <%= f.label :engraving_width, "Engraving Width (eg. 100)" %><br />
  <%= f.text_field :engraving_width %> px<br />

  <%= f.label :engraving_line_limit, "Number of Lines for Engraving" %><br />
  <%= f.select :engraving_line_limit, [1,2,3] %><br />

  <%= f.label :engraving_uppercase, "Uppercase only engraving?" %><br />
  <%= f.check_box :engraving_uppercase %><br />

  <%= f.label :engraving_top_offset, "Text Top Offset (eg. 100)" %><br />
  <%= f.text_field :engraving_top_offset %> px<br />

  <%= f.label :engraving_left_offset, "Text Left Offset (eg. 83)" %><br />
  <%= f.text_field :engraving_left_offset %> px<br />

  <%= f.label :engraving_top_offset, "Input Top Offset (eg. 30)" %><br />
  <%= f.text_field :engraving_input_top_offset %> px<br />

  <%= f.label :engraving_left_offset, "Input Left Offset (eg. 317)" %><br />
  <%= f.text_field :engraving_input_left_offset %> px<br />

  <%= f.label :has_horizontal_engraving? %><br />
  <%= f.check_box :has_horizontal_engraving? %><br/>
</div>
