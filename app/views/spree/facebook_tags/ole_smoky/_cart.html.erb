<% if controller.controller_name == "orders" && controller.action_name == "edit" %>
  <%
    product_owners = Array.new
    @order.line_items.map { |i| product_owners << i.product.taxons.map(&:name) }
  %>
  <% if product_owners.flatten.uniq.include? 'Ole Smoky' %>
    <!-- Facebook Conversion Code for Adds to Cart - Ole Smoky Moonshine -->
    <script>(function() {
      var _fbq = window._fbq || (window._fbq = []);
      if (!_fbq.loaded) {
      var fbds = document.createElement('script');
      fbds.async = true;
      fbds.src = '//connect.facebook.net/en_US/fbds.js';
      var s = document.getElementsByTagName('script')[0];
      s.parentNode.insertBefore(fbds, s);
      _fbq.loaded = true;
      }
      })();
      window._fbq = window._fbq || [];
      window._fbq.push(['track', '6033051927013', {'value':'0.00','currency':'USD'}]);
    </script>
    <noscript><img height="1" width="1" alt="" style="display:none" src="https://www.facebook.com/tr?ev=6033051927013&amp;cd[value]=0.00&amp;cd[currency]=USD&amp;noscript=1" /></noscript>
  <% end %>
<% end %>
